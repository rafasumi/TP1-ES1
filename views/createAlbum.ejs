                </ul>
            </div>
        </div>
    </nav>

    <section class="page-section" id="form">
        <div class="registration-form">
            <form>
                <h2 class="text-center mt-0 pb-4">Cadastrar Álbum</h2>
                <div class="form-floating">
                    <input type="text" class="form-control item" id="nome" placeholder="Nome do álbum">
                    <label for="nome">Nome do álbum</label>
                </div>
                <div class="form-floating">
                    <input type="text" class="form-control item" id="artista" placeholder="Nome do artista">
                    <label for="artista">Nome do artista</label>
                </div>
                <div class="form-floating">
                    <input type="date" class="form-control item" id="ano" placeholder="Ano">
                    <label for="ano">Data de lançamento</label>
                </div>
                <div class="form-floating">
                    <input type="text" class="form-control item" id="genero" placeholder="Gênero Musical">
                    <label for="genero">Gênero musical</label>
                </div>
                <div class="form-floating">
                    <input type="url" class="form-control item" id="url" placeholder="URL para imagem do álbum">
                    <label for="url">URL para imagem do álbum</label>
                </div>
                <div class="row g-2 mb-3 align-items-center">
                    <div class="col-auto form-check">
                        <label for="inputRating" class="form-check-label col-form-label">Nota:</label>
                    </div>
                    <div class="col-auto rating" id="inputRating">
                        <input class="form-check-input" type="radio" name="rating" value="5" id="5"><label for="5">☆</label>
                        <input class="form-check-input" type="radio" name="rating" value="4" id="4"><label for="4">☆</label>
                        <input class="form-check-input" type="radio" name="rating" value="3" id="3"><label for="3">☆</label>
                        <input class="form-check-input" type="radio" name="rating" value="2" id="2"><label for="2">☆</label>
                        <input class="form-check-input" type="radio" name="rating" value="1" id="1"><label for="1">☆</label>
                    </div>
                </div>
                <div class="form-floating">
                    <button type="button" class="btn btn-secondary create-account w-100">Cadastrar</button>
                </div>
            </form>
        </div>
    </section>

