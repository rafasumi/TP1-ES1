<!DOCTYPE html>
<html lang="pt-br">

<head>

  <%- include('partials/stylehead') -%>

  <link rel="stylesheet" href="/css/viewArtist.css">

  <title>Rate.io - Artistas</title>
</head>

<body id="page-top">
  <%- include('partials/navbar') -%>

  <!-- Masthead-->
  <header class="masthead">
    <div class="container px-4 px-lg-5 h-100">
      <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-8 align-self-end">
          <h2 class="">Artistas Cadastrados</h2>
        </div>
        <div class="col-lg-8 align-self-baseline py-4">
          <a href="/artist/create" class="btn btn-secondary border-0">Adicionar Artista</a>
        </div>
      </div>
    </div>
  </header>

  <section class="page-section" id="albuns">
    <div class="container px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 mx-1" id="divCards">
        <% artists.forEach(artist => { %>
          <div class="mx-2 mb-3 card" style="width: 18rem;">
            <img src=<%= artist.image %> class="card-img-top mt-4 mb-2" style="max-height: 18rem;">
            <div class="card-body">
              <h4 class="card-title"><b><%- artist.name %></b></h4>
              <h6 class="card-title my-3"><b>Gênero musical: </b><%- artist.musicalGenre %></h6>
              <h6 class="mb-3"><b>País: </b><%- artist.country %></h6>
              <div class="row g-2 align-items-center">
                <% if (artist.avgRating && !isNaN(artist.avgRating)) { %>
                  <h6 class="card-title">
                    <% for (let i = 1; i <= Math.floor(artist.avgRating); ++i) { %>
                      <i class="fa fa-star checked" aria-hidden="true"></i>
                    <% } %>
                    <% for (let i = 1; i <= Math.ceil(5 - artist.avgRating); ++i) { %>
                      <i class="fa fa-star unchecked" aria-hidden="true"></i>
                    <% } %>
                    <%- artist.avgRating %>
                  </h6>
                  <% } else { %>
                    <h6 class="card-title">-</h6>
                    <% } %>
                  <a type="button" class="btn btn-secondary border-0 my-2" href="/artist/<%- artist.id %>">Ver artista</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    </div>
  </section>

  <%- include('partials/footer') -%>
</body>

</html>